<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingStart="16dp"
                    android:paddingTop="24dp"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:focusableInTouchMode="true"
                    android:id="@+id/nearby_root_relative_layout"
                    android:visibility="gone">
        <!--TODO focusableintouchmode is incorrect probably, added because recycler checkedTextView is focused on start-->

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nearby_header"
                android:id="@+id/nearby_header"
                style="@style/CustomHeader"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nearby_sub_header"
                android:layout_below="@id/nearby_header"
                android:id="@+id/nearby_sub_header"
                style="@style/CustomSubHeader"/>

        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_below="@id/nearby_sub_header"
                android:id="@+id/nearby_rv"/>

        <include layout="@layout/qr_footer_layout"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/nearby_rv"
                 android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
